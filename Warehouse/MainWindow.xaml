<Window x:Class="Warehouse.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Warehouse"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
   
    <Grid>
        <TextBox x:Name="Username" HorizontalAlignment="Left" Margin="33,88,0,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Width="120"/>
        <Button Content="Login" HorizontalAlignment="Left" Margin="33,131,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Label Content="Login here: " HorizontalAlignment="Left" Margin="33,40,0,0" VerticalAlignment="Top"/>
        <Label Content="Register new user: " HorizontalAlignment="Left" Margin="426,40,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="UserRegister" Text="Username" HorizontalAlignment="Left" Margin="426,88,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <CheckBox x:Name="IsEmployeeCheckbox" Content="Employee" HorizontalAlignment="Left" Margin="589,91,0,0" VerticalAlignment="Top"/>
        <Button x:Name="Register" Content="Register" HorizontalAlignment="Left" Margin="426,131,0,0" VerticalAlignment="Top" Click="Register_Click"/>

    </Grid>
</Window>
