<Window x:Class="Warehouse.DeleteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Warehouse"
        mc:Ignorable="d"
        Title="Delete" Height="310" Width="310">
    <Grid>
        <ComboBox x:Name="Items" HorizontalAlignment="Left" Margin="20,47,0,0" VerticalAlignment="Top" Width="120" Loaded="Window_Loaded"/>
        <ComboBox x:Name="Locations" HorizontalAlignment="Left" Margin="169,47,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="Quantity" HorizontalAlignment="Center" Margin="0,116,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Please select item" HorizontalAlignment="Left" Margin="20,16,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.377,0.038"/>
        <Label Content="Please select location" HorizontalAlignment="Left" Margin="169,16,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.377,0.038"/>
        <Label Content="Quantity" HorizontalAlignment="Center" Margin="0,85,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.377,0.038"/>
        <Button x:Name="Delete" Content="Delete" HorizontalAlignment="Center" Margin="0,172,0,0" VerticalAlignment="Top" Click="Delete_Click"/>



    </Grid>
</Window>
