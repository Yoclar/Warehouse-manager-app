<Window x:Class="Warehouse.UpdateElementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Warehouse"
        mc:Ignorable="d"
        Title="UpdateElementWindow" Height="204" Width="426">
    <Grid>
        <Label Content="New Description:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10" />
        <TextBox x:Name="NewDescription" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,10" Width="150" />
        <Label Content="New Brand:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,40" />
        <TextBox x:Name="NewBrand" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,40" Width="150" />
        <Button Content="Update" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,70" Width="75" Click="UpdateButton_Click" />
    </Grid>
</Window>
